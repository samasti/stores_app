button-tag

  button.mdc-button.mdc-button--raised ref='button'
    |{label}

  javascript:
    this.label = opts.label

    this.on('mount', function() {
      mdc.ripple.MDCRipple.attachTo(this.refs.button);
    })

  scss:
    button-tag.center {
      margin: 0 auto;
      display: table;
    }
